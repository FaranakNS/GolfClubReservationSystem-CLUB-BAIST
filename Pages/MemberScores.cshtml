@page
@model GolfClubReservationSystem.Pages.MemberScoresModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "My Scorecards";
}

<h1>My Scorecards</h1>

<!-- Inline styles for the dark golf club theme with a constrained container -->
<style>
    /* Global Page Background */
    body {
        background-color: #000;
        color: #eee;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
     
    }

    /* Card Container */
    .card {
        background-color: #222;
        border: 1px solid #444;
        border-radius: 6px;
        padding: 20px;
        margin: 40px auto;
        max-width: 800px;
        overflow-x: auto; /* Prevent table from overflowing */
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.7);
    }

    /* Card Header */
    .card-header {
        background-color: #1e7e34; /* Green */
        color: #ffc107; /* Yellow */
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Buttons */
    .btn-custom {
        background-color: #ffc107; /* Yellow */
        color: #000;
        border: none;
        padding: 8px 14px;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
    }

        .btn-custom:hover {
            background-color: #e0a800;
        }

    /* Form Label and Input */
    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        color: #eee;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        background-color: #333;
        color: #eee;
        border: 1px solid #444;
        padding: 8px;
        border-radius: 4px;
        width: 100%;
    }

        .form-control:focus {
            outline: none;
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        }

    /* Table Styling */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    thead {
        background-color: #1e7e34;
        color: #ffc107;
    }

    th, td {
        padding: 12px;
        border: 1px solid #444;
        text-align: left;
    }

    tbody tr:nth-child(odd) {
        background-color: #2b2b2b;
    }

    tbody tr:nth-child(even) {
        background-color: #242424;
    }
    /* No Scores Message */
    .no-scores {
        margin-top: 20px;
        color: #ffc107;
        font-weight: bold;
        text-align: center;
    }
</style>

<div class="card">
    <div class="card-header">
        <h1 class="card-title">My Scorecards</h1>
    </div>

    <!-- Form to input the MemberID -->
    <form method="get">
        <div class="form-group">
            <label asp-for="MemberID" class="form-label"></label>
            <input asp-for="MemberID" class="form-control" placeholder="Enter your Member ID" />
            <span asp-validation-for="MemberID" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-custom">Get My Scores</button>
    </form>

    @if (Model.MemberScorecards != null && Model.MemberScorecards.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Scorecard ID</th>
                    <th>Date</th>
                    <th>Golf Course</th>
                    <th>Course Rating</th>
                    <th>Slope Rating</th>
                    <th>Total Score</th>
                    <th>Hole Scores</th>
                    <th>Member Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var score in Model.MemberScorecards)
                {
                    <tr>
                        <td>@score.Id</td>
                        <td>@score.Date.ToString("yyyy-MM-dd")</td>
                        <td>@score.GolfCourse</td>
                        <td>@score.CourseRating</td>
                        <td>@score.SlopeRating</td>
                        <td>@score.TotalScore</td>
                        <td>@score.HoleScores</td>
                        <td>@score.MemberName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.MemberID > 0)
    {
        <p class="no-scores">No scores found for MemberID @Model.MemberID.</p>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
