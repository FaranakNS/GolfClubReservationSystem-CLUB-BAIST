@page
@model GolfClubReservationSystem.Pages.MembershipRecordModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Membership Record";
}
<!-- Inline CSS for dark golf club theme -->
<style>
    /* Global Body Styling */
    body {
        background-color: #000;
        color: #eee;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    /* Container Card */
    .card {
        background-color: rgba(0, 0, 0, 0.7); /* Subtle transparency over a background image, if used */
        border: 1px solid #444;
        border-radius: 8px;
        max-width: 900px;
        margin: 40px auto;
        box-shadow: 0 2px 8px rgba(0,0,0,0.5);
    }

    .card-header {
        background-color: #1e7e34; /* Green */
        color: #ffc107; /* Yellow */
        padding: 20px;
        text-align: center;
        border-radius: 8px 8px 0 0;
    }

    .card-title {
        margin: 0;
        font-size: 2em;
        font-weight: bold;
    }

    .card-body {
        padding: 20px;
    }

    /* Table Styles */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    thead {
        background-color: #1e7e34; /* Green header */
        color: #ffc107; /* Yellow text */
    }

    th, td {
        padding: 12px;
        border: 1px solid #444;
        text-align: left;
    }

    tbody tr:nth-child(odd) {
        background-color: #2b2b2b;
    }

    tbody tr:nth-child(even) {
        background-color: #242424;
    }

    /* Utility Classes */
    .mt-3 {
        margin-top: 1rem;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }
</style>

<div class="card">
    <div class="card-header">
        <h1 class="card-title">Membership Record</h1>
    </div>
    <div class="card-body">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Level</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in Model.Members)
                {
                    <tr>
                        <td>@member.MemberID</td>
                        <td>@member.MemberName</td>
                        <td>@member.MembershipLevel</td>
                        <td>@member.Email</td>
                        <td>@member.Phone</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}